
<% alces.hunter.each do |hostname, mac_address| %>
host <%= hostname %> {
  hardware ethernet <%= mac_address %>;
  option host-name "<%= hostname %>.<%= alces.answers.pri_network_domain %>.<%= domain %>";
  option routers <%= alces.hostip %>;
  filename "/pxelinux.0";
  fixed-address <%= `gethostip -d #{hostname}`.chomp %>;
}
<% end %>
